{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": ["data/*"],
      "@src/*": ["*"],
      "@tests/*": ["tests/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
